<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Task #<%= @task.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/tasks" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_task/<%= @task.id %>" class="btn btn-block btn-outline-secondary">
          Delete task
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Task name
      </dt>
      <dd>
        <%= @task.task_name %>
      </dd>

      <dt>
        Body description
      </dt>
      <dd>
        <%= @task.body_description %>
      </dd>


      <%# <dt>
        Status
      </dt>
      <dd>
        <%= @task.status_id %>
      <%# </dd> %>


      <dt>
        Created at
      </dt>
      <dd>
        <%= (@task.created_at.strftime("%b %d, %Y")) %> 
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@task.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

